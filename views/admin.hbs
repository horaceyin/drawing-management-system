<script>

    function validateCreateLineForm() {
        var line = document.forms["createLineForm"]["line"].value;
        var name = document.forms["createLineForm"]["name"].value;
        if (line == "" || name == "") {
            alert("All fields are required.");
            return false;
        }
    }

    function validateCreateLocationForm() {
        var loc = document.forms["createLocationForm"]["loc"].value;
        if (loc == "") {
            alert("Location are required.");
            return false;
        }
    }

    function validateDeleteLocForm() {
        var delLoc = document.forms["delLocFrom"]["location"].value;
        if (delLoc == "") {
            alert("Location are required.");
            return false;
        }
    }
</script>

