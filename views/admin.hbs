        <select class="form-control" name="SelectLocationForCategory" id="SelectLocationForCategory" required disabled>
            <option value="">----------------</option>
        </select>
        </div>

        <div class="form-inline">
        <label for="InputCategory" class="mr-sm-2 mb-2">3. Input a category for above station</label>
        <input type="text" class="form-control mr-sm-2 mb-2" placeholder="Category name" style="width: 30%;" id="InputCategory" name="InputCategory" autocomplete="off" required disabled>
        </div>
        <button id="createCategoryButton" type="submit" class="btn btn-primary mb-2">Create</button>
    </div>
</div><hr>

